@model WebApplication1.Controllers.HomeController.HomeBurndownViewModel
@{
    ViewBag.Title = "Sunny's Burndown";
}

<div class="row" style="margin-top: 10px">
    @using (var form = @Html.BeginForm("SaveChanges", "Home", new { id = Model.BurndownId }))
    {
        <div class="col-md-6">
            @Html.TextAreaFor(m => m.Definition, new { style = "width:100%; height:600px; max-width:none;" })
        </div>
        <div class="col-md-6">
            <div class="row">
                Link to this Burndown: <a href="@Model.AbsoluteUrl">
                    @Model.AbsoluteUrl
                </a>
            </div>
            <div class="row">
                <input type="submit" value="Save"/>
            </div>
            <div class="row">
                Task Chooser and details go here
            </div>
        </div>
    }
</div>